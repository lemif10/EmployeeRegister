@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/css/BootsWatchLux.css" />
    <title>Index</title>

    <style type="text/css">
        .header {
            background: none;
            display: flex;
            justify-content: space-between;
        }

        ::placeholder {
            
        }
    </style>
</head>

<body>
@if (User.IsInRole("Editor") || User.IsInRole("Admin"))
{
    @Html.ActionLink("Register New", "Create")
}
@using (Html.BeginForm())
{
    <div class="header">
            <input class="form-control me-sm-2" type="text" placeholder="Введите имя работника" value="@ViewBag.filte" name="filter">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Поиск</button>
    </div>


    <h3>Employees</h3>

    <table class="table">
        <tr>
            <th>Full Name</th>
            <th>Department</th>
            <th>Phone Number</th>
            <th></th>
        </tr>

        @await Html.PartialAsync("Table")
    </table>
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

