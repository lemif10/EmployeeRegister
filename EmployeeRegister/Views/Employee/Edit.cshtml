@using EmployeeRegister.Common.Enums
@model EmployeeRegister.ViewModels.EmployeeViewModel;

@{
    ViewData["Title"] = "Edit employee";
}

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Edit</title>
</head>

<body>
<form asp-controller="Employee" asp-action="Edit" method="post">
    
    <div class="form-group">
        <label class="control-label">FullName: </label>
        @Html.TextBoxFor(x => x.FullName, new {size=28})
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Address: </label>
        @Html.TextBoxFor(x => x.Address, new {size=29})
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">FamilyStatus: </label>
        @Html.DropDownListFor(x => x.FamilyStatus,
            new SelectList(Enum.GetNames(typeof(FamilyStatus))))
    </div>

    <div class="form-group">
        <label class="control-label">Work experience: </label>
        @Html.EditorFor(x => x.WorkExperience)
        <span asp-validation-for="WorkExperience" class="text-danger"></span>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="form-group">
            <label class="control-label">Salary: </label>
            @Html.TextBoxFor(x => x.Salary, new {size=30})
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    }
    
    <div class="form-group">
        <label class="control-label">PhoneNumber: </label>
       @Html.TextBoxFor(x => x.ContactViewModel.PhoneNumber, new {size=21})
        <span asp-validation-for="ContactViewModel.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Email: </label>
      @Html.TextBoxFor(x => x.ContactViewModel.Email, new {size=30})
        <span asp-validation-for="ContactViewModel.Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label class="control-label">Department: </label>
        @Html.DropDownListFor(x => x.Department.Id,
            new SelectList(Model.Departments, "Id", "Name"))
    </div>
    
    <input type="submit" value="Edit">
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
</script>
</body>
</html>