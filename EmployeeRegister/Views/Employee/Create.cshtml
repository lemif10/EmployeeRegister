@using EmployeeRegister.Common.Enums
@model EmployeeRegister.ViewModels.EmployeeViewModel;

@{
    ViewData["Title"] = "Create employee";
}

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/css/BootsWatchLux.css" />
    <title>Create</title>
</head>

<body>
<form asp-controller="Employee" asp-action="Create" method="post">
        <div class="uiforvalidation">
            @Html.ValidationSummary()
        </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">FullName: </label>
        @Html.TextBoxFor(x => x.FullName, new {size=28})
    </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">Address: </label>
        @Html.TextBoxFor(x => x.Address, new {size=29})
    </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">Work experience: </label>
            @Html.TextBoxFor(x => x.WorkExperience)
    </div>
       
    @if (User.IsInRole("Admin"))
    {
            <p></p>
            <div class="form-group text-center">
            <label class="control-label">Salary: </label>
            @Html.TextBoxFor(x => x.Salary, new {size=30})
        </div>
    }
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">PhoneNumber: </label>
        @Html.TextBoxFor(x => x.ContactViewModel.PhoneNumber, new {size=23})
    </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">Email: </label>
        @Html.TextBoxFor(x => x.ContactViewModel.Email, new {size=31})
    </div>
        <p></p>
        <div class="form-group text-center">
            <label class="control-label">FamilyStatus: </label>
            @Html.DropDownListFor(x => x.FamilyStatus,
            new SelectList(Enum.GetNames(typeof(FamilyStatus))))
        </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">Department: </label>
        @Html.DropDownListFor(x => x.Department.Id,
            new SelectList(Model.Departments, "Id", "Name"))
    </div>
        <p></p>
        <div class="form-group text-center">
            <input class="btn btn-dark" type="submit" value="Create">
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>


