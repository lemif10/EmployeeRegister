@model EmployeeRegister.ViewModels.UserViewModel

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/css/BootsWatchLux.css" />
    <title>Registration</title>
</head>

<body>
<form asp-controller="Authentication" asp-action="Registration" method="post">
        <div class="uiforvalidation">
            @Html.ValidationSummary()
        </div>
    <p></p>
        <div class="form-group text-center">
        <label class="control-label">Login: </label>
        @Html.TextBoxFor(x => x.Login, new {size=32})
    </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">Email: </label>
            @Html.TextBoxFor(x => x.Email, new {size=32})
    </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">Password: </label>
        @Html.TextBoxFor(x => x.Password, new {size=28, @type="Password"})
    </div>
        <p></p>
        <div class="form-group text-center">
        <label class="control-label">Confirm password: </label>
            @Html.TextBoxFor(x => x.ConfirmPassword, new {size=21, @type="Password"})
    </div>
        <p></p>
        <div class="text-center">
            <input class="btn btn-dark" type="submit" value="Registration">
        </div>

</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>